{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DevMind": "Debug"
    }
  },
  "Llm": {
    "Provider": "openai",
    "OpenAi": {
      "ApiKey": "sk-your-key-here",
      "Model": "gpt-4-mini",
      "BaseUrl": "https://api.openai.com/v1",
      "OrganizationId": "org-your-org-id",
      "MaxTokens": 2048,
      "Temperature": 0.1,
      "TopP": 1.0,
      "FrequencyPenalty": 0.0,
      "PresencePenalty": 0.0,
      "TimeoutSeconds": 30,
      "EnableStreaming": false,
      "Safety": {
        "EnableModeration": true,
        "MaxToxicityScore": 0.7
      },
      "Cost": {
        "MonthlySpendingLimit": 100.00,
        "AutoOptimizeModelSelection": true,
        "CostOptimizedModel": "gpt-3.5-turbo"
      },
      "Functions": {
        "EnableFunctionCalling": true,
        "MaxFunctionCalls": 10,
        "AutoCallFunctions": true
      }
    },
    "Anthropic": {
      "ApiKey": "sk-ant-your-key-here",
      "Model": "claude-3-sonnet-20240229",
      "MaxTokens": 4000,
      "Temperature": 0.1,
      "TopK": 40,
      "Safety": {
        "EnableSafetyFiltering": true,
        "RejectHarmfulRequests": true
      },
      "Cost": {
        "MonthlySpendingLimit": 100.00,
        "EnableSpendingAlerts": true,
        "AutoOptimizeModelSelection": false
      }
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "codellama",
      "MaxTokens": 4000,
      "Temperature": 0.1,
      "ContextSize": 4096,
      "GpuLayers": -1,
      "TopK": 40,
      "RepeatPenalty": 1.1,
      "Server": {
        "AutoStartServer": true,
        "AutoPullModels": true,
        "HealthCheckIntervalSeconds": 60
      },
      "Performance": {
        "EnableGpuAcceleration": true,
        "KeepModelLoaded": true,
        "MemoryUsagePercentage": 80
      },
      "Privacy": {
        "LocalOnlyMode": true,
        "EnableRequestLogging": false,
        "EnableTelemetry": false
      }
    },
    "AzureOpenAi": {
      "Endpoint": "https://your-resource.openai.azure.com",
      "DeploymentName": "gpt-4-turbo",
      "ApiVersion": "2024-02-01",
      "UseAzureAdAuth": true,
      "TenantId": "your-tenant-id",
      "ClientId": "your-client-id",
      "ClientSecret": "your-client-secret",
      "MaxTokens": 4000,
      "Temperature": 0.1,
      "ContentFilter": {
        "EnableContentFiltering": true,
        "HateFilterLevel": "Medium",
        "ViolenceFilterLevel": "Medium"
      },
      "Monitoring": {
        "EnableApplicationInsights": true,
        "ApplicationInsightsConnectionString": "your-app-insights-connection"
      },
      "Cost": {
        "MonthlySpendingLimit": 1000.00,
        "EnableAzureAlerts": true
      }
    }
  },
  "McpClient": {
    "BaseUrl": "http://localhost:5000",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 2,
    "EnableHealthChecks": true,
    "HealthCheckIntervalSeconds": 60,
    "UseMockClient": true
  },
  "Agent": {
    "DefaultWorkingDirectory": ".",
    "MaxExecutionTimeoutMinutes": 10,
    "MaxConcurrentToolExecutions": 3,
    "EnableContextPersistence": true,
    "Security": {
      "EnableInputSanitization": true,
      "RestrictFileSystemAccess": true,
      "AllowedDirectories": [
        ".",
        "~/projects",
        "~/Documents"
      ],
      "BlockedCommands": [
        "rm -rf",
        "del /f",
        "format"
      ]
    }
  }
}
